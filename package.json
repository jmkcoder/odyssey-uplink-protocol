{
    "name": "@uplink-protocol/core",
    "version": "0.0.4",
    "description": "Odyssey Uplink Protocol - Core package with vanilla JS integration",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./uplink-auto-init": {
            "import": "./dist/uplink-auto-init.js",
            "require": "./dist/uplink-auto-init.js",
            "types": "./dist/uplink-auto-init.d.ts"
        }
    },    "files": [
        "dist",
        "dist/scripts"
    ],    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",        "build": "npm run clean && npm run build:umd",
        "build:umd": "webpack --config webpack.lib.js --mode=production",
        "clean": "rimraf dist",
        "prepare": "npm run build",
        "dev": "webpack serve --mode development",
        "create-package": "npm publish --access=public",        "demo": "powershell -ExecutionPolicy Bypass -File scripts/open-demo.ps1",
        "vanilla:demo": "powershell -ExecutionPolicy Bypass -File scripts/open-vanilla-demo.ps1",
        "test:binding": "powershell -ExecutionPolicy Bypass -File scripts/test-two-way-binding.ps1",
        "react:demo": "powershell -ExecutionPolicy Bypass -File scripts/open-react-demo.ps1",
        "hooks:demo": "powershell -ExecutionPolicy Bypass -File scripts/open-hooks-demo.ps1",
        "setup-framework-packages": "powershell -ExecutionPolicy Bypass -File scripts/setup-framework-packages.ps1",
        "copy-framework-files": "powershell -ExecutionPolicy Bypass -File scripts/copy-framework-files.ps1",
        "update-framework-versions": "powershell -ExecutionPolicy Bypass -File scripts/update-framework-versions.ps1",
        "fix-framework-imports": "powershell -ExecutionPolicy Bypass -File scripts/fix-framework-imports.ps1",
        "create-framework-packages": "echo \"See docs/CREATING_FRAMEWORK_PACKAGES.md for instructions\""
    },    "bin": {},    "keywords": [
        "web-components",
        "ui",
        "components",
        "button",
        "vanilla-js",
        "framework-agnostic"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@types/jest": "^29.5.14",
        "@types/lodash": "^4.17.16",
        "@types/react": "^19.1.3",
        "@types/react-dom": "^19.1.3",
        "autoprefixer": "^10.4.21",
        "css-loader": "^7.1.2",
        "esm": "^3.2.25",
        "html-webpack-plugin": "^5.6.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lit": "^3.2.1",
        "mini-css-extract-plugin": "^2.9.2",
        "postcss": "^8.5.3",
        "postcss-loader": "^8.1.1",
        "postcss-webpack-plugin": "^1.0.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "remark-gfm": "^4.0.1",
        "rimraf": "^6.0.1",
        "sass": "^1.87.0",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "to-string-loader": "^1.2.0",
        "ts-jest": "^29.3.2",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1"
    }
}
